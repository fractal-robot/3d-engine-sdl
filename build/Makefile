# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  rasterizer_config = debug

else ifeq ($(config),release)
  rasterizer_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := rasterizer

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

rasterizer:
ifneq (,$(rasterizer_config))
	@echo "==== Building rasterizer ($(rasterizer_config)) ===="
	@${MAKE} --no-print-directory -C . -f rasterizer.make config=$(rasterizer_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f rasterizer.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   rasterizer"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"